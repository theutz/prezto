#
# Named Directories
#

hash -d config=$XDG_CONFIG_HOME
hash -d state=$XDG_STATE_HOME
hash -d data=$XDG_DATA_HOME
hash -d cache=$XDG_CACHE_HOME
hash -d zsh=$ZDOTDIR
hash -d tmux=~config/tmux
hash -d tmuxp=~config/tmuxp
hash -d nvim=~config/nvim
hash -d prezto=$ZPREZTODIR
hash -d chezmoi=~data/chezmoi
hash -d home=~
hash -d code=~/code
hash -d theutz=~code/theutz
hash -d delegator=~code/delegator

#
# suffix aliases
#
alias -s {md,markdown,mkdwn}="glow -p"
alias -s {yml,yaml,json,js,css,scss,ts,tsx,jsx,toml,conf}="e"

#
# global aliases
#
alias -g P="| ${(z)PAGER:-less}"
alias -g @noerr='2>/dev/null'
alias -g @noout='&>/dev/null'

#
# Aliases
#

# ai
alias ask='sgpt'
alias hal='interpreter'
alias to-ai='mods chat'

# tmux
alias tmuxcd='cd ~tmux'
alias tmuxe='(cd ~tmux && e tmux.conf)'
alias fzt='fzf-tmux'

# tmuxp
alias txa='tmuxp-attach'
alias txe='tmuxp-edit'
alias txl='tmuxp-load'
alias tmuxpcd='cd ~tmuxp'
alias tmuxpe='(cd ~tmuxp && fzf | xargs $EDITOR)'

#
# ssh
#
alias sshe='(cd ~/.ssh && e config)'

#
# vim
#
alias nvimcd='cd ~nvim'
alias nvime='(nvimcd && nvim)'

#
# zsh
#
alias ez="exec zsh"
alias recomp='rm -rf ~/.zcompdump && compinit'
alias aliases="$EDITOR ${0:a} && exec zsh"
alias zshcd='cd ~zsh'
alias zshe='(cd ~zsh && $EDITOR) && exec zsh'
alias prezto='(cd ~prezto && $EDITOR) && exec zsh'
for rcfile in ~prezto/runcoms/^README.md; do
  alias ".${rcfile:t}e"="(cd ~prezto && e $rcfile) && exec zsh"
done
alias "${ZPREZTODIR:t}e"='(cd ~prezto && e .) && exec zsh'
alias "${ZPREZTODIR:t}cd"='cd ~prezto'

# exercism
alias exm="exercism"
