if ! command -v valet &>/dev/null; then
  command pecl $argv[@]
  return $?
fi

if ! valet links | grep " $(pwd) " &>/dev/null; then
  command pecl $argv[@]
  return $?
fi

if ! valet parked | grep " $(pwd) " &>/dev/null; then
  command pecl $argv[@]
  return $?
fi

$pecl="$(valet which-php | sed 's/php$/pecl/')"

$pecl $argv[@]
return $?

# vim: ft=zsh
